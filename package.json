{
    "scripts": {
        "build": "anchor build && ./scripts/cp_idl.sh",
        "test": "mocha -r ts-node/register -t 100000000 'tests/**/*.ts'",
        "deploy:t": "(anchor build) | (anchor deploy --provider.cluster testnet)",
        "deploy:d": "(anchor build) | (anchor deploy --provider.cluster devnet)",
        "build verifiable": "anchor build --verifiable -s '1.10.25' -p hunny_play -d 'projectserum/build:v0.24.1'",
        "d": "anchor test --skip-deploy --skip-build --provider.cluster devnet",
        "t": "anchor test --skip-deploy --skip-build --provider.cluster testnet",
        "all": "(yarn d) | (yarn t)",
        "pub": "rm -rf ./dist && tsc && npm version patch --force && npm publish --access public",
        "update:apps": "cd ./app/gem-bank && yarn update && cd ../gem-farm && yarn update",
        "update:anchor": "yarn upgrade @project-serum/anchor --latest --check-files"
    },
    "dependencies": {
        "@project-serum/anchor": "^0.24.1",
        "@solana/spl-token": "^0.2.0"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "chai": "^4.3.4",
        "mocha": "^9.0.3",
        "prettier": "^2.6.2",
        "ts-mocha": "^10.0.0",
        "typescript": "^4.3.5"
    }
}
